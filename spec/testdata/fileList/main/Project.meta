Project {

  LibraryConfig test_sub {
    Files "src/sub/*.cpp"
    IncludeDir "include/sub", inherit: true
  }

  LibraryConfig test_main {
    Files "src/main/*.cpp"
    IncludeDir "include/main", inherit: true
    Dependency config: test_sub
    DefaultToolchain GCC
  }

  LibraryConfig test_asm {
    Files "src/main/*.s"
    DefaultToolchain GCC
  }

}