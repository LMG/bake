  LibraryConfig test_post_a {
    PostSteps {
      CommandLine "ruby takesLong.rb CMD_A 1", echo: "off", independent: true
    }
  }
  LibraryConfig test_post_b {
    PostSteps {
      CommandLine "ruby takesLong.rb CMD_B 2", echo: "off", independent: true
    }
  }
  LibraryConfig test_post_c {
    PostSteps {
      CommandLine "ruby takesLong.rb CMD_C 3", echo: "off", independent: false
    }
  }
  LibraryConfig test_post_d {
    PostSteps {
      CommandLine "ruby takesLong.rb CMD_D 4", echo: "off", independent: true
